
<div class = 'container'>
  <h2>Welcome <%= @user.full_name %></h2>
  <h3>Channels Currently Subscribed to:</h3>
  <ul>
    <% if !@user.channels.empty? %>
      <% @user.channels.each do |channel| %>
        <li><%= channel.name %></li>
      <% end %>
    <% else %>
      <li>Not currently subscribed to any channels.</li>
    <% end %>

  </ul>
  <h3>Total Charges This Month: </h3>
  <p>$<%= sprintf"%.2f",@monthly_charge %></p>

</div>
